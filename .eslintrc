{
    "extends": "airbnb",
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "ecmaFeatures": {
            "jsx": true,
            "impliedStrict": true
        },
        "sourceType": "module"
    },
    "rules": {
        "react/jsx-indent": ["warn", 4],
        "react/jsx-indent-props": ["warn", 4],
        "indent": [ "error", 4 ],
        "valid-jsdoc": "warn",
        "linebreak-style": "off",
        "no-undef": "off",
        "no-unused-vars": "off",
        "curly": "off",
        "no-continue": "off",
        "no-plusplus": "off",
        "prefer-template": "off",
        "no-param-reassign": "off",
        "no-use-before-define": 1,
        "import/no-webpack-loader-syntax": "off",
        "import/no-unresolved": "off",
        "import/no-extraneous-dependencies": "off",
        "no-console": 1,
        "comma-dangle": "off",
        "max-len": ["warn", 120],
        "react/jsx-curly-spacing": "off",
        "no-underscore-dangle": "off",
        "class-methods-use-this": "off",
        "react/forbid-prop-types": "off"
    }
}
